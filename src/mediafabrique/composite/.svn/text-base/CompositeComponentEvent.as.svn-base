package patterns.structural.composite {
  import flash.events.Event;
  
  /**
   *
   * @author Peter
   *
   */
  public class CompositeComponentEvent extends Event {
    
    /**
     *
     */
    public static const COMPONENT_ADDED : String = "componentAdded";
    
    /**
     *
     */
    public static const COMPONENT_REMOVED : String = "componentRemoved";
    
    /**
     *
     */
    public var object : Object;
    
    /**
     *
     */
    public var name : String;
    
    /**
     *
     * @param type
     * @param object
     * @param name
     *
     */
    public function CompositeComponentEvent(type : String, object : Object,
      name : String = null) {
      super(type);
      this.object = object;
      this.name = name;
    }
  }
}