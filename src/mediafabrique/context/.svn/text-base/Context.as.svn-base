package context {
  import flash.events.EventDispatcher;
  
  import logging.ILogger;
  import logging.Log;
  import lifecycle.LifeCycleContainer;
  
  
  /**
   *
   * @author Peter
   *
   */
  public class Context extends LifeCycleContainer {
    
    /**
     * 
     */
    private static var logger: ILogger = Log.getLogger(Context);
    
    /**
     *
     */
    private static var rootContext : Context;
    
    /**
    *
    */
    {
      if (!rootContext) {        
        rootContext = new RootContext();
        rootContext.initialize();
      }
    }    
    
    /**
     *
     * @return
     *
     */
    public static function get root() : Context {
      if (!rootContext) {
        rootContext = new RootContext();
        rootContext.initialize();
      }
      return rootContext;
    }        
  }
}